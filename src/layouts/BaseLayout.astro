---
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'

const { pageTitle } = Astro.props
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='viewport' content='width=device-width' />
    <meta name='generator' content={Astro.generator} />
    <title>{pageTitle}</title>
    <meta name='description' content='Frontier Ward - Cheyenne, Wyoming' />
    <script defer data-domain='frontierward.org' src='https://plausible.io/js/script.js'></script>
  </head>
  <body>
    <div class='bg-gray-100'>
      <div class='mx-auto min-h-screen max-w-6xl bg-white'>
        <Header />

        <main class='px-16 pt-12'><slot /></main>

        <Footer />
      </div>
    </div>
  </body>
</html>
